import 'package:supabase_flutter/supabase_flutter.dart';

class LessonManager {
  final supabase = Supabase.instance.client;

  /// Get the current lesson ID from user_progress
  Future<String?> getCurrentLessonId() async {
    final userId = supabase.auth.currentUser?.id;
    if (userId == null) return null;

    try {
      final response = await supabase
          .from('user_progress')
          .select('current_lesson')
          .eq('user_id', userId)
          .single();

      final lessonId = response['current_lesson'];
      if (lessonId is String && lessonId.isNotEmpty) {
        return lessonId;
      } else {
        return null;
      }
    } catch (e) {
      print('Error fetching current lesson ID: $e');
      return null;
    }
  }

  /// Update the current lesson ID in user_progress
  Future<void> updateCurrentLesson(String newLessonId) async {
    final userId = supabase.auth.currentUser?.id;
    if (userId == null) return;

    try {
      await supabase
          .from('user_progress')
          .update({'current_lesson': newLessonId})
          .eq('user_id', userId);

      print('Updated current_lesson to: $newLessonId');
    } catch (e) {
      print('Error updating current lesson ID: $e');
    }
  }
}
